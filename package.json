    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.1.1",
    "postcss": "^8.2.1",
    "postcss-loader": "^4.1.0",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.3",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "webpack": "4",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "5"
  },
  "devDependencies": {
    "@nrwl/cli": "10.3.1",
    "@nrwl/eslint-plugin-nx": "10.3.1",
    "@nrwl/jest": "10.3.1",
    "@nrwl/nx-plugin": "10.3.1",
    "@nrwl/workspace": "10.3.1",
    "@types/jest": "26.0.8",
    "@types/node": "~8.9.4",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0",
    "commitizen": "^4.2.1",
    "cz-customizable": "^6.3.0",
    "dotenv": "6.2.0",
    "eslint": "7.10.0",
    "eslint-config-prettier": "6.0.0",
    "husky": "^4.3.0",
    "jest": "26.2.2",
    "lint-staged": "^10.4.2",
    "prettier": "2.0.4",
    "pretty-quick": "^3.1.0",
    "ts-jest": "26.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~6.0.0",
    "typescript": "~4.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn check-commit && pretty-quick --check"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,md,ts,html}": [
      "yarn format --uncommitted"
    ]
  }
}
